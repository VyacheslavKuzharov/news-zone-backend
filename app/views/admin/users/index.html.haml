%h1 Users

.form-group
  = link_to 'New User', new_admin_user_path, class: 'btn btn-default'

.table-responsive
  %table.table.table.table-striped
    %thead
      %tr
        %th id
        %th Email
        %th Role
        %th ip
        %th Created_at
        %th

    %tbody
      - @admin_users.each do |admin_user|
        %tr
          %td= admin_user.id
          %td= admin_user.email
          %td= admin_user.role
          %td= admin_user.current_sign_in_ip
          %td= admin_user.created_at.strftime('%d/%m/%Y')
          %td
            - unless current_user.id == admin_user.id
              = link_to 'Edit', edit_admin_user_path(admin_user), class: 'btn btn-default btn-xs'
              = link_to 'Destroy', [:admin, admin_user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs'

.row
  .container.text-center
    = paginate @admin_users